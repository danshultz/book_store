<h1>Listing books</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Short description</th>
      <th>Description</th>
      <th>Price</th>
      <th>Cr</th>
      <th>Sample url</th>
      <th>Isbn</th>
      <th>Cover image</th>
      <th>Format type</th>
      <th>Drm</th>
      <th>Author</th>
      <th>Distribution model</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.short_description %></td>
        <td><%= book.description %></td>
        <td><%= book.price %></td>
        <td><%= book.cr_id %></td>
        <td><%= book.sample_url %></td>
        <td><%= book.isbn %></td>
        <td><%= book.cover_image %></td>
        <td><%= book.format_type %></td>
        <td><%= book.drm_id %></td>
        <td><%= book.author %></td>
        <td><%= book.distribution_model %></td>
        <td>
          <%= form_for(book, :url => shopping_cart_path) do |f| %>
            <%= f.hidden_field(:id) %>
            <%= f.submit("Add to Cart") %>
          <% end %>
        </td>
        <td><%= link_to 'Add to Cart', book %></td>
        <td><%= link_to 'Show', book %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

